<%-include('header')-%>



<div class="text-center center-div" id="login">
    <div class="container w-25 border py-4">
        <div class="title">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log in for the Existing User</span>
            <% if(locals.logout){%>
                <div class="alert alert-success text-center">
                    <%=logout %>
                </div>
          <%  } %>
          <% if(locals.error){%>
            <div class="alert alert-danger text-center">
                <%=error %>
            </div>
      <%  } %>
        </div>
      
        <form action="/route/login" method="post" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name="email" required>
                
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="password" required>
            </div>
            <button type="submit" class="btn btn-success rounded-pill mt-3 ">Submit</button>
        </form>
    </div>
</div>




<%-include('footer')-%>